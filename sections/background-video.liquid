<style>
      .ep-video-section {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
      }

      .ep-background-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .ep-button-container {
            width: 100%;
          display: flex;
        position: absolute;
        top: 90%;
        left: 50%;
    transform: translate(-50%, -50%);
        flex-direction: column;
        align-items: center;
    }
    .txt-cntr{
    text-align:center;
      color: white;
      margin-bottom: 20px;
    }
  @media only screen and (max-width: 768px) {
    .ep-button-container {

        top: 70%;
    }
  }
</style>

<div class="ep-video-section">
  <video autoplay muted playsinline loop class="ep-background-video">
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    Your browser does not support the video tag.
  </video>
  {%- if section.settings.button_url != blank -%}
    <div class=" ep-button-container">
      <h2 class="hero__heading txt-cntr">
        {{ section.settings.heading }}
      </h2>
      <a href="{{ section.settings.button_url }}" class="button">
        {{- section.settings.button_text -}}
      </a>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Video Section with Button",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
  {
      "type": "text",
      "id": "heading",
      "label": "Banner Text",
      "default": "Go to Website"
    },

    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Go to Website"
    }
  ],
  "presets": [
    {
      "name": "Video with Button"
    }
  ]
}
{% endschema %}

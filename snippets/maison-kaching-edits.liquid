<!-- MAISON KACHING EDITS -->
<script>
  async function waitForKaching() {
    return new Promise(async (resolve) => {
      if (document.querySelector('.kaching-bundles__bar-container')) resolve();
      await new Promise((x) => setTimeout(x, 100));
      console.log('kaching-bundle not found, waiting for 100ms');
    });
  }

  async function addNumbers() {
    await waitForKaching();
    console.log('kaching-bundle found, adding numbers');
    const bars = document.querySelectorAll('.kaching-bundles__bar-container');
    for (const bar of bars) {
      console.log('bar found, adding numbers');
      const containers = Array.from(bar.querySelectorAll('img')).map((img) => img.parentElement);

      let i = 1;
      for (const container of containers) {
        console.log('container found, adding number', i);
        container.style.position = 'relative';

        const div = document.createElement('div');
        div.innerText = i.toString();
        div.style.position = 'absolute';
        div.style.top = '0';
        div.style.right = '0';
        div.style.backgroundColor = 'white';
        div.style.color = 'black';
        div.style.padding = '4px 8px';
        div.style.borderRadius = '0';

        container.appendChild(div);
        i++
      }
    }
  }

  addNumbers();
</script>
